#!/bin/bash
run_shared=(steam)
run_shared+=(./dontstarve_dedicated_server_nullrenderer)
run_shared+=(-console)
run_shared+=(-persistent_storage_root /game)
run_shared+=(-conf_dir DoNotStarveTogether) 
run_shared+=(-cluster Cluster_1) 



pushd /game/bin > /dev/null
  exec su-exec "${run_shared[@]}" -shard Caves | sed 's/^/Caves:  /' $@ &
  exec su-exec "${run_shared[@]}" -shard Master  | sed 's/^/Master: /' $@
popd > /dev/null
